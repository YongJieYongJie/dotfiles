{
  // Access this file from Vim by running :CocConfig

  // Disable auto-complete from COC to avoid interfering with nvim-cmp.
  "suggest.autoTrigger": "none",

  "explorer.file.autoReveal": true,

    //////////////////////////
   // General COC settings //
  //////////////////////////
  "coc.preferences.extensionUpdateCheck": "never",
  "explorer.icon.enableNerdfont": true,

  "languageserver": {

      //////////
     // Perl //
    //////////
    "Perl-LanguageServer": {
      "command": "perl",
      "args": [
        "-MPerl::LanguageServer", "-e",
        "Perl::LanguageServer::run"
      ],
      "filetypes": ["perl"]
    },

      ///////
     // C //
    ///////
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp", "cuda", "objc", "objcpp"],
      "rootPatterns": [".ccls-root", "compile_commands.json"],
      "initializationOptions": {
        "cache": {
          "directory": ".ccls-cache"
        },
        "client": {
          "snippetSupport": true
        }
      }
    }
  },

    //////////
   // Misc //
  //////////

  // Use virtual text to display errors by default.
  "diagnostic.virtualText": true,
  "diagnostic.virtualTextCurrentLineOnly": false,
  "diagnostic.virtualTextPrefix": "‚ùñ ",

  // Enable auto-update of detecting current function, so
  // get(b:,'coc_current_function','') correctly returns the current function
  // for use in status line.
  "coc.preferences.currentFunctionSymbolAutoUpdate": true

}
// vim:ft=jsonc
